@page "/Showcase"
@inject NavigationManager Navigation

<PageTitle>Showcase | Arayom</PageTitle>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="images/wordguess.png" class="card-img-top"/>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Word Guess</h5>
                    <p>
                        This is a a simple, interactive Word Guess game that I built using Blazor, 
                        a modern .NET web framework for building client-side web apps with C#. 
                        The game challenges players to guess a hidden word, letter by letter, within 
                        a limited number of attempts, similar to the classic game of Hangman.
                    </p>
                    <NavLink class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/wordguess"))">Play</NavLink>
                </div>
            </div>   
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="images/rps.png" class="card-img-top"/>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Rock Paper Scissors</h5>
                    <p>
                        This is a Rock Paper Scissors game that I built using Blazor, 
                        the modern .NET framework for building interactive web applications 
                        with C#. The game offers a fun and simple user experience where players 
                        can challenge the computer and test their luck and strategy.
                    </p>
                    <NavLink class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/rockpaperscissors"))">Play</NavLink>
                </div>
            </div>   
        </div>
    </div>
</div>